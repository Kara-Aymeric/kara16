<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="commission_rule_form_view_wizard" model="ir.ui.view">
        <field name="name">commission rule form view wizard</field>
        <field name="model">commission.rule.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="choose_rule" string="Choose rule">
                        <field name="user_id" readonly="1" required="1" />
                        <field name="rule_assigned" invisible="1" />
                        <field name="commission_rule_ids" required="1" options="{'no_create': True, 'no_create_edit':True}"/>
                    </group>
                    <footer>
                        <button string="Assign"
                                type="object"
                                name="action_add_salespeople_commission_rule"
                                class="btn-primary"
                        />
                        <button string="Cancel"
                                class="btn-secondary"
                                special="cancel"
                        />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>