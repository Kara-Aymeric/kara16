<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="custom_view_payment_term_form" model="ir.ui.view">
        <field name="name">custom view payment term form</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="inside">
                <notebook>
                    <page name="payment_reminder_email1" string="Email 1">
                        <group>
                            <field name="email_subject_x1" />
                            <field name="email_content_x1" />
                        </group>
                    </page>
                    <page name="payment_reminder_email2" string="Email 2">
                        <group>
                            <field name="email_subject_x2" />
                            <field name="email_content_x2" />
                        </group>
                    </page>
                    <page name="payment_reminder_email3" string="Email 3">
                        <group>
                            <field name="email_subject_x3" />
                            <field name="email_content_x3" />
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>
