<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_payment_reminder_line_tree" model="ir.ui.view">
        <field name="name">view payment reminder line tree</field>
        <field name="model">partner.payment.reminder.line</field>
        <field name="arch" type="xml">
            <tree string="Payment reminder">
                <field name="move_id"/>
                <field name="partner_id"/>
                <field name="invoice_date"/>
                <field name="date_maturity" widget="remaining_days"/>
                <field name="currency_id" invisible="1"/>
                <field name="amount_residual" widget="monetary" options="{'currency_field': 'currency_id'}"/>
            </tree>
        </field>
    </record>

    <record id="view_payment_reminder_line_form" model="ir.ui.view">
        <field name="name">view payment reminder line form</field>
        <field name="model">partner.payment.reminder.line</field>
        <field name="arch" type="xml">
            <form string="Payment reminder">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="move_id" />
                        </h1>
                    </div>
                    <group name="information" string="Information">
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="partner_id" />
                            <field name="invoice_date" />
                            <field name="invoice_origin" />
                            <field name="date_maturity" widget="remaining_days"/>
                            <field name="amount_residual" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_partner_payment_reminder_line" model="ir.actions.act_window">
        <field name="name">Payment reminder</field>
        <field name="res_model">partner.payment.reminder.line</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record id="action_view_partner_payment_reminder_line_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="custom_payment_reminder.view_payment_reminder_line_tree"/>
        <field name="act_window_id" ref="action_partner_payment_reminder_line"/>
    </record>

    <record id="action_view_partner_payment_reminder_line_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="custom_payment_reminder.view_payment_reminder_line_form"/>
        <field name="act_window_id" ref="action_partner_payment_reminder_line"/>
    </record>

    <menuitem action="action_partner_payment_reminder_line" id="payment_reminder_line_menu" parent="account.account_invoicing_menu" name="Payment reminder" groups="account.group_account_manager" sequence="2"/>

</odoo>
