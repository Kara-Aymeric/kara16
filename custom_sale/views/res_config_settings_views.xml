<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="kara_trading_settings_view_form" model="ir.ui.view">
        <field name="name">kara.trading.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='quotation_order_setting_container']" position="after">
                <h2>Kara Trading</h2>
                <div class="row mt16 o_settings_container" name="kara_trading_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="supplier_mail_template_id_setting">
                        <div class="o_setting_right_pane">
                            <label for="supplier_mail_template_id"/>
                            <div class="text-muted">Modèle d'email a envoyer au fournisseur lorsqu'il s'agit d'un envoi de devis</div>
                            <div class="row mt16">
                                <label for="supplier_mail_template_id" string="Modèle" class="col-lg-4 o_light_label" />
                                <field name="supplier_mail_template_id" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
<!--                    <div class="col-12 col-lg-6 o_setting_box" id="agent_mail_template_id_setting">
                        <div class="o_setting_right_pane">
                            <label for="agent_mail_template_id"/>
                            <div class="text-muted">Modèle d'email a envoyer à l'agent principal lorsque l'agent commercial valide son devis.</div>
                            <div class="row mt16">
                                <label for="agent_mail_template_id" string="Modèle" class="col-lg-4 o_light_label" />
                                <field name="agent_mail_template_id" class="oe_inline"/>
                            </div>
                        </div>
                    </div>-->
                </div>
            </xpath>
        </field>
    </record>
</odoo>
