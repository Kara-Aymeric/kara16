<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="custom_view_payment_term_form" model="ir.ui.view">
        <field name="name">custom view payment term form</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="partner_financier_id" />
                <field name="management_fees" attrs="{'required': [('partner_financier_id', '!=', False)]}"/>
                <field name="fees_based_on" attrs="{'required': [('partner_financier_id', '!=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
