<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="custom_view_partner_form" model="ir.ui.view">
        <field name="name">custom.view.partner.form</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page name="financing" string="Financing">
                    <field name="credit_customer_ids">
                        <tree editable="bottom">
                            <field name="currency_id" invisible="1"/>
                            <field name="partner_financier_id" />
                            <field name="eligibility" />
                            <field name="base_credit" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="date_update_base_credit" />
                            <field name="current_credit" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="remaining_credit" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="invoice_ids" widget="many2many_tags" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
