<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_dashboard_agent_product" model="ir.actions.act_window">
        <field name="name">Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
    
    <record id="custom_product_template_form_view" model="ir.ui.view">
        <field name="name">custom product template form view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page name="agent_commission" string="Agent commission">
                    <field name="agent_commission_ids">
                        <tree string="Agent commission" editable="bottom">
                            <field name="product_template_id" invisible='1'/>
                            <field name="user_id" options="{'no_create_edit': 1}" required="1"/>
                            <field name="percentage_value" />
                            <field name="discount_percentage_value" />
<!--                            <field name="sale_commission" readonly="1" force_save="1" widget="monetary" required="1"/>-->
<!--                            <field name="discount_sale_commission" readonly="1" force_save="1" widget="monetary" required="1"/>-->
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
