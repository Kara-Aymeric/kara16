<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="custom_view_partner_form" model="ir.ui.view">
        <field name="name">custom view partner form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="related_user_ids"  widget="many2many_tags"
                       options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                       groups="dashboard_agent.group_admin"
                       attrs="{'invisible': [('is_company','=',False),('parent_id','!=',False)]}"/>
                <div name="parent_access_rights" colspan="2" attrs="{'invisible': ['|',('is_company','=',True),('parent_id','=',False)]}">
                    <p>Access rights are managed on <button name="open_commercial_entity" type="object" string="the parent company" class="oe_link"/></p>
                </div>
            </xpath>
        </field>
    </record>

    <record id="dashboard_agorane_view_partner_form" model="ir.ui.view">
        <field name="name">dashboard.agorane.view.partner.form</field>
        <field name="inherit_id" ref="woo_user_connector.agorane_view_partner_form" />
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='agent_commission']" position="before">
                <field name="readonly_custom_field" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='agent_commission']" position="attributes">
                <attribute name="attrs">{'readonly': [('readonly_custom_field', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='agent_discount_commission']" position="attributes">
                <attribute name="attrs">{'readonly': [('readonly_custom_field', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='allow_flexible_payment']" position="attributes">
                <attribute name="attrs">{'readonly': [('readonly_custom_field', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="custom_view_res_partner_filter" model="ir.ui.view">
        <field name="name">custom view res partner filter</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="." position="inside">
                <field name="related_user_ids"/>
            </xpath>
        </field>
    </record>

    <record id="custom_view_partner_tree" model="ir.ui.view">
        <field name="name">custom view partner tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='country_id']" position="after">
                <field name="related_user_ids" widget="many2many_tags" groups="dashboard_agent.group_admin"/>
            </xpath>
        </field>
    </record>

    <record id="action_dashboard_agent_contact" model="ir.actions.act_window">
        <field name="name">My Contacts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">['|', ('user_id', '=', uid), ('related_user_ids.user_ids', '=', uid)]</field>
        <field name="context">{'dashboard_agent': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new contact, the first step of a new contact !
            </p>
        </field>
    </record>

</odoo>
