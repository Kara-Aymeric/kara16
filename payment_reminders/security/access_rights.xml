<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="payment_reminder_multi_company" model="ir.rule">
            <field name="name">Payment Reminder multi-company</field>
            <field name="model_id" ref="model_payment_reminders"/>
            <field eval="True" name="global"/>
            <field name="domain_force">[('company_id','=',user.company_id.id)]</field>
        </record>

        <record id="reminder_history_multi_company" model="ir.rule">
            <field name="name">Reminder History multi-company</field>
            <field name="model_id" ref="model_payment_reminders_history"/>
            <field eval="True" name="global"/>
            <field name="domain_force">[('company_id','=',user.company_id.id)]</field>
        </record>
    </data>
</odoo>
