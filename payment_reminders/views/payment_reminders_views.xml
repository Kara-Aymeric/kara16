<odoo>
    <record id="payment_reminders_form" model="ir.ui.view">
        <field name="name">payment.reminders.form</field>
        <field name="model">payment.reminders</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="reminder_selection"/>
                            <field name="mail_template_id" domain="[('is_reminder_template','=', True)]" context="{'default_is_reminder_template': True}"/>
                        </group>
                        <group>
                            <field name="days"/>
                            <field name="company_id"/>
                        </group>
                    </group>

                    <div class="card bg-info" style="background-color: #D9EDF7 !important;color: #43809C;">
                        <div class="card-body"><strong>Note:</strong>Set 0 in days field if you want to send mail on due date. In this case reminder selection Before/After does not matter.</div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="payment_reminders_tree" model="ir.ui.view">
        <field name="name">payment.reminders.tree</field>
        <field name="model">payment.reminders</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="reminder_selection" />
                <field name="mail_template_id" />
            </tree>
        </field>
    </record>
    <record id="action_payment_reminders_template" model="ir.actions.act_window">
        <field name="name">Payment Reminders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payment.reminders</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click here to create your template.
            </p>
            <p>
                Use templates to create polished, professional quotes in minutes.
                Send these quotes by email and let your customers sign online.
                Use
                cross-selling and discounts to push and boost your sales.
            </p>
        </field>
    </record>

    <menuitem id='payment_reminders_menu_account'
        action='payment_reminders.action_payment_reminders_template' parent='account_payment.payment_provider_menu'
        sequence='21' name='Payment Reminders' />
</odoo>
